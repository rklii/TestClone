@model ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}

@await Component.InvokeAsync("StoreScopeConfiguration")
<form asp-controller="WidgetSkypeChat" asp-action="Configure" method="post">
    <div class="cards-group">
        <div class="card card-default">
            <div class="card-body">
                    @Html.Raw(T("Plugins.Widget.SkypeChat.SkypeChatNote").Text)
                    <br /><hr /><br />
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-override-store-checkbox asp-for="SkypeChatScript_OverrideForStore" asp-input="SkypeChatScript" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                            <nop-label asp-for="SkypeChatScript" />
                        </div>
                        <div class="col-md-9">
                            <nop-textarea asp-for="SkypeChatScript" />
                            <span asp-validation-for="SkypeChatScript"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-override-store-checkbox asp-for="WidgetZoneId_OverrideForStore" asp-input="WidgetZoneId" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                            <nop-label asp-for="WidgetZoneId" />
                        </div>
                        <div class="col-md-9">
                            <nop-select asp-for="WidgetZoneId" asp-items="Model.AvailableWidgetZone" />
                            <span asp-validation-for="WidgetZoneId"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-9 offset-md-3">
                            <button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</form>