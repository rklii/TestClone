            <div class="col-md-9 col-lg-10">
                <nop-editor asp-for="NumberOfBestsellersOnHomepage" />
                <span asp-validation-for="NumberOfBestsellersOnHomepage"></span>
            </div>
        </div>
    </nop-nested-setting>
