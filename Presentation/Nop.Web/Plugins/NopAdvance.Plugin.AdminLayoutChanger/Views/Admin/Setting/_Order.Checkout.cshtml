        <div class="col-md-9 col-lg-10">
            <nop-editor asp-for="DisableOrderCompletedPage"/>
            <span asp-validation-for="DisableOrderCompletedPage"></span>
        </div>
    </div>
	 <div class="form-group row advanced-setting">
        <div class="col-md-3 col-lg-2">
            <nop-override-store-checkbox asp-for="DisplayPickupInStoreOnShippingMethodPage_OverrideForStore" asp-input="DisplayPickupInStoreOnShippingMethodPage" asp-store-scope="@Model.ActiveStoreScopeConfiguration"/>
            <nop-label asp-for="DisplayPickupInStoreOnShippingMethodPage"/>
