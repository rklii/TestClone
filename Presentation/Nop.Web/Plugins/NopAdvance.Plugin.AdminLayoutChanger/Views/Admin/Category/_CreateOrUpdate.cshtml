@model CategoryModel

@{
    string verticalTab = (TabLayout)adminLayoutChangerSettings.TabLayoutId == TabLayout.Vertical ? "vertically-tab" : "";
    }

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-12 clearfix">
                    <div class="float-left">
                        @await Component.InvokeAsync("SettingMode", new { modeName = "category-advanced-mode" })
                    </div>
                </div>
            </div>

            <nop-tabs id="category-cards" class="@verticalTab">
                <nop-tab asp-name="category-info" asp-icon="fas fa-info" asp-title="@T("Admin.Catalog.Categories.Info")"  asp-advanced="false" asp-default="true">@await Html.PartialAsync("_CreateOrUpdate.Info", Model)</nop-tab>
                <nop-tab asp-name="category-display" asp-icon="fas fa-tv" asp-title="@T("Admin.Catalog.Categories.Display")"  asp-advanced="false">@await Html.PartialAsync("_CreateOrUpdate.Display", Model)</nop-tab>
                <nop-tab asp-name="category-mappings" asp-icon="fas fa-bookmark" asp-title="@T("Admin.Catalog.Categories.Mappings")"  asp-advanced="true">@await Html.PartialAsync("_CreateOrUpdate.Mappings", Model)</nop-tab>
                <nop-tab asp-name="category-seo" asp-icon="fas fa-search-plus" asp-title="@T("Admin.Common.SEO")"  asp-advanced="true">@await Html.PartialAsync("_CreateOrUpdate.Seo", Model)</nop-tab>
                <nop-tab asp-name="category-products" asp-icon="fas fa-th-list" asp-title="@T("Admin.Catalog.Categories.Products")"  asp-advanced="true">@await Html.PartialAsync("_CreateOrUpdate.Products", Model)</nop-tab>

                @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.CategoryDetailsBlock, additionalData = Model })
            </nop-tabs>
        </div>
    </div>
</section>
